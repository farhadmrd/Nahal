<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/selector_background_color"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/custom"
        layout="@layout/sheets_color_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.nahal.developer.family.nahal.madules.fm_KBottomSheet.sheets.core.views.SheetsRecyclerView
        android:id="@+id/colorTemplatesView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_margin_zero"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/standard_margin_x2"
        android:paddingVertical="@dimen/standard_margin_x2"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/custom" />

</androidx.constraintlayout.widget.ConstraintLayout>