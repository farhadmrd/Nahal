<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.nahal.developer.family.nahal.madules.fm_KBottomSheet.sheets.core.views.SheetsValue
        android:id="@+id/timeValue"
        style="@style/custom_font_style_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin_x3"
        android:layout_marginTop="@dimen/standard_margin_x2"
        android:layout_marginEnd="@dimen/standard_margin_x3"
        android:background="@drawable/sheets_ripple_bg_rounded"
        android:clickable="true"
        android:focusable="true"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.nahal.developer.family.nahal.madules.fm_KBottomSheet.sheets.core.views.SheetsContent
        android:id="@+id/hintLabel"
        style="@style/custom_font_style_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/timeValue"
        app:layout_constraintStart_toStartOf="@+id/timeValue"
        app:layout_constraintTop_toBottomOf="@+id/timeValue" />

    <com.nahal.developer.family.nahal.madules.fm_KBottomSheet.sheets.core.views.SheetsDivider
        android:id="@+id/divider"
        android:layout_width="@dimen/standard_margin_zero"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/standard_margin_x2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hintLabel" />

    <com.nahal.developer.family.nahal.madules.fm_KBottomSheet.sheets.core.views.SheetNumericalInput
        android:id="@+id/numericalInput"
        android:layout_width="@dimen/standard_margin_zero"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/standard_margin_x6"
        android:layout_marginTop="@dimen/standard_margin_x2"
        android:layout_marginBottom="@dimen/standard_margin_x2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

</androidx.constraintlayout.widget.ConstraintLayout>