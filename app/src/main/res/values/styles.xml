<resources>

    <style name="custom_font_style_s" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/yekan</item>
    </style>

    <style name="custom_font_style_m" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/yekan</item>
    </style>

    <style name="custom_font_style_l" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/yekan</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/yekan</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/yekan</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/yekan</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/yekan</item>
        <item name="android:textColor">@color/fontColorBlack</item>
    </style>

    <style name="Widget.Theme.Nahal.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Nahal.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="BottomSheet.Base.Light" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:colorEdgeEffect">?attr/sheetsHighlightColor</item>
        <item name="android:colorControlHighlight">?attr/sheetsHighlightColor</item>
        <item name="sheetsBackgroundColor">@color/sheetsDayBackground</item>
        <item name="sheetsPrimaryColor">?sheetsPrimaryColor</item>
        <item name="android:colorActivatedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPressedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorLongPressedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorFocusedHighlight">?attr/sheetsPrimaryColor</item>

        <item name="android:colorPrimary">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPrimaryDark">?attr/sheetsPrimaryColor</item>
        <item name="android:colorAccent">?attr/sheetsPrimaryColor</item>
        <item name="android:navigationBarColor">?attr/sheetsBackgroundColor</item>
    </style>

    <style name="BottomSheet.Base.Dark" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:colorEdgeEffect">?attr/sheetsHighlightColor</item>
        <item name="android:colorControlHighlight">?attr/sheetsHighlightColor</item>

        <item name="sheetsBackgroundColor">@color/sheetsNightBackground</item>
        <item name="sheetsPrimaryColor">?colorPrimary</item>
        <item name="android:colorPrimary">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPrimaryDark">?attr/sheetsPrimaryColor</item>
        <item name="android:colorAccent">?attr/sheetsPrimaryColor</item>
        <item name="android:navigationBarColor">?attr/sheetsBackgroundColor</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogSheet.Base.Light" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:colorEdgeEffect">?attr/sheetsHighlightColor</item>
        <item name="android:colorControlHighlight">?attr/sheetsHighlightColor</item>
        <item name="sheetsBackgroundColor">@color/sheetsDayBackground</item>
        <item name="sheetsPrimaryColor">?sheetsPrimaryColor</item>
        <item name="android:colorActivatedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPressedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorLongPressedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorFocusedHighlight">?attr/sheetsPrimaryColor</item>

        <item name="android:colorPrimary">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPrimaryDark">?attr/sheetsPrimaryColor</item>
        <item name="android:colorAccent">?attr/sheetsPrimaryColor</item>
        <item name="android:navigationBarColor">?attr/sheetsBackgroundColor</item>
    </style>

    <style name="DialogSheet.Base.Dark" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:colorEdgeEffect">?attr/sheetsHighlightColor</item>
        <item name="android:colorControlHighlight">?attr/sheetsHighlightColor</item>

        <item name="sheetsBackgroundColor">@color/sheetsNightBackground</item>
        <item name="sheetsPrimaryColor">?colorPrimary</item>
        <item name="android:colorPrimary">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPrimaryDark">?attr/sheetsPrimaryColor</item>
        <item name="android:colorAccent">?attr/sheetsPrimaryColor</item>
        <item name="android:navigationBarColor">?attr/sheetsBackgroundColor</item>
    </style>

</resources>